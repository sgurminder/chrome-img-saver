 {
     "manifest_version" : 2,

     "name": "Image saver",
     "description": "Saves current open images to Google drive",
     "version" : "1.0",


     "browser_action" : {
	 "default_icon": "img/icon.png",
	 "default_popup": "html/popup.html",
	 "default_title": "save images to drive"
     },

     "permissions": [
	 "activeTab",
	 "identity"
	 ],

     "oauth2": {
	 "client_id": "813937627219-6nbg34qr4pl51eos2979fq40n5s3rn62.apps.googleusercontent.com",
	 "scopes": ["https://www.googleapis.com/auth/drive" ]
     },
     "content_scripts": [
	 {
	     "matches": ["<all_urls>"],
	     "js": ["js/contentScript.js"]
	 }
     ],
     "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}


